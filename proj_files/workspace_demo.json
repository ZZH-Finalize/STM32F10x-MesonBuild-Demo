{
    "folders": [
        {
            "path": "."
        }
    ],
    "settings": {
        "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
        "C_Cpp.default.compileCommands": "builddir\\compile_commands.json",
        "files.associations": {
            "*.s": "arm"
        },
        "mesonbuild.configureOptions": [
            "--cross-file",
            "cross_files/toolchain.ini",
            "--cross-file",
            "cross_files/stm32f10x.ini",
            "--cross-file",
            "@cross_file@"
        ]
    },
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "meson - build",
                "type": "meson",
                "mode": "build",
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": {
                    "base": "$gcc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ]
                },
                "presentation": {
                    "focus": true,
                    "clear": true
                },
                "target": "dbg_size:run"
            },
            {
                "label": "meson - clean",
                "type": "meson",
                "mode": "clean",
                "isBackground": true,
                "presentation": {
                    "clear": true,
                    "close": true,
                    "reveal": "silent",
                    "panel": "shared"
                },
                "group": {
                    "kind": "test",
                    "isDefault": true
                }
            },
            {
                "label": "launch openocd - stlink",
                "type": "shell",
                "command": "openocd",
                "args": [
                    "-f",
                    "openocd_cfg/stlink.cfg",
                    "-f",
                    "openocd_cfg/stm32f1x.cfg"
                ],
                "isBackground": true,
                "runOptions": {
                    "instanceLimit": 1
                },
                "presentation": {
                    "echo": false,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "dedicated",
                    "revealProblems": "onProblem",
                    "close": true
                },
                "problemMatcher": []
            },
            {
                "label": "launch openocd - dap",
                "type": "shell",
                "command": "openocd",
                "args": [
                    "-f",
                    "openocd_cfg/cmsis-dap.cfg",
                    "-f",
                    "openocd_cfg/stm32f1x.cfg"
                ],
                "isBackground": true,
                "runOptions": {
                    "instanceLimit": 1
                },
                "presentation": {
                    "echo": false,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "dedicated",
                    "revealProblems": "onProblem",
                    "close": true
                },
                "problemMatcher": []
            }
        ]
    },
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "debug - ram - dap",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/builddir/@debug_file@",
                "cwd": "${workspaceFolder}/builddir",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "miDebuggerPath": "@gdb_path@",
                "miDebuggerServerAddress": "127.0.0.1:3333",
                "hardwareBreakpoints": {
                    "limit": 8,
                    "require": false
                },
                "stopAtEntry": false,
                "targetArchitecture": "arm",
                "launchCompleteCommand": "exec-continue",
                "unknownBreakpointHandling": "stop",
                "useExtendedRemote": true,
                "preLaunchTask": "launch openocd - dap",
                "setupCommands": [
                    {
                        "description": "为 gdb 启用整齐打印",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                ],
                "postRemoteConnectCommands": [
                    {
                        "text": "monitor adapter srst pulse_width 20",
                        "description": "复位芯片"
                    },
                    {
                        "text": "monitor init",
                        "description": "初始化"
                    },
                    {
                        "text": "monitor adapter speed 40000",
                        "description": "提高JTAG速度",
                        "ignoreFailures": true
                    },
                    {
                        "text": "load",
                        "description": "加载到目标芯片"
                    },
                    {
                        "text": "tb main",
                        "description": "在main处停止",
                        "ignoreFailures": true
                    },
                    {
                        "text": "b HardFault_Handler",
                        "description": "进入内核异常时停止"
                    },
                    // {
                    //     "text": "c",
                    //     "ignoreFailures": true,
                    //     "description": "开始执行"
